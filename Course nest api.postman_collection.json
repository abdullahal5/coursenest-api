							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();\r",
									"\r",
									"if (response.success && response.data?.accessToken) {\r",
									"    if (response.data.role === \"user\") {\r",
									"        pm.collectionVariables.set(\"User_Token\", `Bearer ${response.data.accessToken}`);\r",
									"    } else {\r",
									"        pm.collectionVariables.set(\"Admin_Token\", `Bearer ${response.data.accessToken}`);\r",
									"    }\r",
									"}\r",
